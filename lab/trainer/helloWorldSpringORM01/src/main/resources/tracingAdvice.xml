<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<bean id="tracingAdvice" class="net.gfu.seminar.spring.helloworld.SimpleTraceAdvice"></bean>

	<aop:config>
		<aop:pointcut expression="execution(* welcome())" id="welcomeMethod" />
		<aop:aspect id="tracingAspect" ref="tracingAdvice">
			<aop:before method="enter" pointcut-ref="welcomeMethod" />
			<aop:after-returning method="exit" returning="returnValue" pointcut-ref="welcomeMethod" />
			<aop:after-throwing method="fail"  throwing="cause" pointcut-ref="welcomeMethod"/>
		</aop:aspect>
	</aop:config>

</beans>
