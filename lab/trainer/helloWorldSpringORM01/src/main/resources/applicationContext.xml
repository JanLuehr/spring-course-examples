<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
           default-autowire="byName">

	<bean id="welcome" class="net.gfu.seminar.spring.helloworld.Greeting">
		<!-- set the property guest via the mutator/modifier method Greeting.setGuest(String) -->
		<!--  <property name="guest" ref="guest"/>
		-->
	</bean>

	<bean id="guest" class="net.gfu.seminar.spring.helloworld.GuestImpl" autowire-candidate="true">
		<property name="name" value="Anna Gramm" />
	</bean>
	
	<bean id="specialGuest" class="net.gfu.seminar.spring.helloworld.SpecialGuest">
		<property name="name" value="${name}" />
	</bean>

	<bean id="birthdayChild" class="net.gfu.seminar.spring.helloworld.BirthdayChild">
		<constructor-arg index="0" value="Rainer" />
		<constructor-arg index="1" value="Unsinn" />
		<constructor-arg index="2" value="11.11.2011" />
	</bean>

	<context:property-placeholder location="classpath:/guest.properties" />

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="java.util.Date">
					<bean class="org.springframework.beans.propertyeditors.CustomDateEditor">
						<constructor-arg>
							<bean class="java.text.SimpleDateFormat">
								<constructor-arg value="dd.MM.yyyy" />
							</bean>
						</constructor-arg>
						<constructor-arg value="false" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

</beans>